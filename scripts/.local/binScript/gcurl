#!/usr/bin/bash

[ -z "$MIRROR" ] && MIRROR="https://ghfast.top/"

# GitHub Mirror - Curl

replace-url() {
    domain="$(echo "$1" | cut -f3 -d'/')"
    others="$(echo "$1" | cut -f4- -d'/')"

    case "$domain" in
        "github.com" \
        | "raw.githubusercontent.com" \
        ) ret="$MIRROR$domain/$others" ;;

        *) ret="$1"; ;;
    esac

    echo -n "$ret"
}


replaced_args=()
for arg in "$@"; do
    if [[ "$arg" =~ ^http[s]?:// ]]
        then replaced_args+=("$(replace-url "$arg")")
        else replaced_args+=("$arg")
    fi
done

if [[ "$CR_STDOUT" ]]; then
    echo [gcurl] /usr/bin/curl "${replaced_args[@]}"
elif ! [[ "$CR_NOINFO" ]]; then
    echo [gcurl] /usr/bin/curl "${replaced_args[@]}" >&2
fi

/usr/bin/curl "${replaced_args[@]}"